<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.EditFotoActivity">

    <ImageView
        android:id="@+id/imgLugar2"
        android:layout_width="150dp"
        android:layout_height="156dp"
        android:layout_marginTop="8dp"
        android:background="#90D573"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="@+id/EditDesc"
        app:layout_constraintStart_toStartOf="@+id/EditDesc"
        app:layout_constraintTop_toBottomOf="@+id/EditDesc"
        tools:srcCompat="@tools:sample/avatars" />

    <RatingBar
        android:id="@+id/rating2"
        android:layout_width="233dp"
        android:layout_height="46dp"
        android:layout_marginTop="24dp"
        android:progressTint="#03A9F4"
        app:layout_constraintEnd_toEndOf="@+id/imgLugar2"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="@+id/imgLugar2"
        app:layout_constraintTop_toBottomOf="@+id/imgLugar2" />

    <EditText
        android:id="@+id/editTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:hint="title"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/EditDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Description"
        android:inputType="textPersonName"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/editTitulo"
        app:layout_constraintStart_toStartOf="@+id/editTitulo"
        app:layout_constraintTop_toBottomOf="@+id/editTitulo" />

    <Button
        android:id="@+id/btnModificar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Modificar"
        app:layout_constraintEnd_toEndOf="@+id/rating2"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/rating2"
        app:layout_constraintTop_toBottomOf="@+id/rating2" />

</android.support.constraint.ConstraintLayout>